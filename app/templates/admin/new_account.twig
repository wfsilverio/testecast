{% extends "layout.twig" %}
{% block title %}Nova Conta{% endblock %}
{% block content %}
<h1 class="h4">Nova Conta</h1>
<div class="card p-4">
  <form method="post" action="/admin/accounts" class="row g-3">
    <div class="col-md-6">
      <label class="form-label">Titular</label>
      <input name="owner" class="form-control" placeholder="Nome completo" required>
    </div>
    <div class="col-12 d-flex gap-2">
      <button class="btn btn-primary"><i class="bi bi-check-lg me-1"></i>Criar</button>
      <a class="btn btn-secondary" href="/"><i class="bi bi-x-lg me-1"></i>Cancelar</a>
    </div>
  </form>
</div>
{% endblock %}
