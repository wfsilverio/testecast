{% extends "layout.twig" %}
{% block title %}Editar Conta{% endblock %}
{% block content %}
<h1 class="h4">Editar Conta #{{ account.id }}</h1>
<div class="card p-4">
  <form method="post" action="/admin/accounts/{{ account.id }}">
    <div class="mb-3">
      <label class="form-label">Titular</label>
      <input name="owner" class="form-control" value="{{ account.ownerName }}" required>
    </div>
    <div class="mb-3">
      <label class="form-label">Saldo</label>
      <div class="input-group">
        <span class="input-group-text">R$</span>
        <input name="balance" class="form-control js-money" value="{{ account.balance|number_format(2, ',', '.') }}" required>
      </div>
    </div>
    <div class="d-flex gap-2">
      <button class="btn btn-primary">Salvar</button>
      <a class="btn btn-secondary" href="/accounts/{{ account.id }}">Cancelar</a>
    </div>
  </form>
  <div class="mt-3">
    <a class="btn btn-link p-0" href="/accounts/{{ account.id }}"><i class="bi bi-box-arrow-in-right me-1"></i>Voltar para a conta</a>
  </div>
{% endblock %}
